{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": ".",
    "resolveJsonModule": true,
    "composite": true // required on the dependency project for references to work
